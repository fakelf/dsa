<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/zhou" />

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" >

      

        <ImageView
            android:id="@+id/bottom1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:background="#e4e4e4"/>
          <Button
            android:id="@+id/submit1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="#bbbbbb"
            android:onClick="onb5"
            android:text="总计"
            android:textColor="#ffffff" />
    </RelativeLayout>
      
      
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_above="@id/relativeLayout1"
          android:layout_alignParentLeft="true"
          android:layout_alignParentRight="true"
          android:layout_below="@id/header">

          <RelativeLayout
              android:layout_width="90dp"
              android:layout_height="match_parent"
              android:background="@drawable/bg1"
              
               >

              <Button
                  android:id="@+id/cuisines1"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:layout_alignParentLeft="true"
                  android:layout_alignParentRight="true"
                  android:layout_alignParentTop="true"
                  android:background="#ffffff"
                  android:onClick="onb1"
                  android:text="长按查看" />

              <Button
                  android:id="@+id/cuisines2"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:layout_alignParentLeft="true"
                  android:layout_below="@+id/cuisines1"
                  android:layout_marginTop="0dp"
                  android:background="#bbbbbb"
                  android:onClick="sanguo"
                  android:text="三国"
                  android:textColor="#ffffff" />

              <Button
                  android:id="@+id/cuisines3"
                  android:layout_width="match_parent"
                  android:layout_height="50dp"
                  android:layout_alignParentLeft="true"
                  android:layout_below="@id/cuisines2"
                  android:layout_marginTop="0dp"
                  android:background="#bbbbbb"
                  android:onClick="onb3"
                  android:text="唐宋"
                  android:textColor="#ffffff" />

               <Button
                   android:id="@+id/cuisines4"
                   android:layout_width="match_parent"
                   android:layout_height="50dp"
                   android:layout_alignParentLeft="true"
                   android:layout_below="@id/cuisines3"
                   android:layout_marginTop="0dp"
                   android:background="#bbbbbb"
                   android:onClick="onb4"
                   android:text="明清"
                   android:textColor="#ffffff" />

          </RelativeLayout>

        <ListView
            android:id="@+id/order1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg2"
             >

        </ListView>
          
      </LinearLayout>

   
"

</RelativeLayout>